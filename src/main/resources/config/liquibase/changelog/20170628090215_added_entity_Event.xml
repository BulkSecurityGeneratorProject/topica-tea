<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Event.
    -->
    <changeSet id="20170628090215-1" author="jhipster">
        <createTable tableName="event">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="content" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="event_status" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="event_level" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="amplify_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="priority_group" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="schedule" type="timestamp">
                <constraints nullable="true" />
            </column>
            <column name="question_id" type="bigint">
                <constraints nullable="true" />
            </column>            
            <column name="article_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="is_hot_event" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="is_fanpage_published" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="material_landingpage" type="text">
                <constraints nullable="true" />
            </column>
            <column name="material_fanpage" type="text">
                <constraints nullable="true" />
            </column>
            <column name="material_mail" type="text">
                <constraints nullable="true" />
            </column>
            <column name="reason" type="text">
                <constraints nullable="true" />
            </column>
            <!-- Custom add -->
            <column name="created_user_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="approval_user_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="manager_user_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="writer_user_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="event" columnName="schedule" columnDataType="datetime"/>
        
        <createTable tableName="event_products">
            <column name="event_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="products_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="event_id, products_id" tableName="event_products"/>
        
        <createTable tableName="event_priority_group">
            <column name="event_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="priority_group" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="event_id, priority_group" tableName="event_priority_group"/>
        
        <createTable tableName="event_amplify_type">
            <column name="event_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="amplify_type" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="event_id, amplify_type" tableName="event_amplify_type"/>
        
        <createTable tableName="event_channel_products">
            <column name="event_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="channel_products_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey columnNames="event_id, channel_products_id" tableName="event_channel_products"/>
        
        <!-- Load data -->
        <loadData encoding="UTF-8"
                  file="config/liquibase/event.csv"
                  separator=";"
                  tableName="event">
        </loadData>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/event_products.csv"
                  separator=";"
                  tableName="event_products">
        </loadData>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/event_priority_group.csv"
                  separator=";"
                  tableName="event_priority_group">
        </loadData>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/event_amplify_type.csv"
                  separator=";"
                  tableName="event_amplify_type">
        </loadData>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/event_channel_products.csv"
                  separator=";"
                  tableName="event_channel_products">
        </loadData>
    </changeSet>
</databaseChangeLog>
