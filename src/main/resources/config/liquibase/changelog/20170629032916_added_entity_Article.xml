<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="now()" dbms="mysql"/>
    <property name="autoIncrement" value="true"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Article.
    -->
    <changeSet id="20170629032916-1" author="jhipster">
        <createTable tableName="article">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="jhi_type" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="status" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="image_filename" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="video_link" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="video_caption" type="text">
                <constraints nullable="true" />
            </column>

			<column name="subject1" type="text">
                <constraints nullable="true" />
            </column>
			<column name="content1" type="text">
                <constraints nullable="true" />
            </column>
            <column name="url_link1" type="varchar(255)">
                <constraints nullable="true" />
            </column>
			<column name="image_link1" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="subject2" type="text">
                <constraints nullable="true" />
            </column>
			<column name="content2" type="text">
                <constraints nullable="true" />
            </column>
            <column name="url_link2" type="varchar(255)">
                <constraints nullable="true" />
            </column>
			<column name="image_link2" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            
            <column name="subject3" type="text">
                <constraints nullable="true" />
            </column>
			<column name="content3" type="text">
                <constraints nullable="true" />
            </column>
            <column name="url_link3" type="varchar(255)">
                <constraints nullable="true" />
            </column>
			<column name="image_link3" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <loadData encoding="UTF-8"
                  file="config/liquibase/article.csv"
                  separator="@"
                  tableName="article">
        </loadData>
    </changeSet>
</databaseChangeLog>
